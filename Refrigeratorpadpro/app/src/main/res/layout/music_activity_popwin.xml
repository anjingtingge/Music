<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1080px"
    android:layout_height="960px"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:text="全部歌单"
        android:textSize="40px"/>
    <LinearLayout
        android:layout_width="960px"
        android:layout_height="80px"
        android:layout_marginTop="60px"
        android:layout_gravity="center"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/text_language"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_weight="1"
                android:textSize="36px"
                android:onClick="MainOnClick"
                android:gravity="center"
                android:textColor="@drawable/music_pop_tex_color"
                android:text="语种 " />
            <TextView
                android:id="@+id/text_school"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_weight="1"
                android:textSize="36px"
                android:onClick="MainOnClick"
                android:textColor="@drawable/music_pop_tex_color"

                android:gravity="center"
                android:text="流派 " />
            <TextView
                android:id="@+id/text_theme"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_weight="1"
                android:onClick="MainOnClick"
                android:textColor="@drawable/music_pop_tex_color"

                android:textSize="36px"
                android:gravity="center"
                android:text="主题 " />
            <TextView
                android:id="@+id/text_mood"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_weight="1"
                android:onClick="MainOnClick"
                android:textColor="@drawable/music_pop_tex_color"

                android:textSize="36px"
                android:gravity="center"
                android:text="心情 " />
            <TextView
                android:id="@+id/text_scenes"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_weight="1"
                android:onClick="MainOnClick"
                android:textColor="@drawable/music_pop_tex_color"

                android:textSize="36px"
                android:gravity="center"
                android:text="场景 " />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvmenu"
        android:layout_gravity="center"
        android:layout_width="960px"
        android:layout_height="wrap_content"
        android:background="@color/tab_text_normal"
        android:layout_marginLeft="60px"
        />










</LinearLayout>
